<div class="login">
  <h2>Login</h2>
  <form class="login__form">
    <div class="field">
      <label>Username or Email</label> {{input value=userName}}
    </div>
    <div class="field">
      <label>Password</label> {{input value=password type="password"}}
    </div>
    <div class="btn-field">
      <div class="btn btn-primary" {{action 'login'}}>Login</div>
      <p class="register-tag">Don't have a Username?<span>
    <a class="register-btn" href=""> Register here!</a>
  </span></p>
    </div>
  </form>
</div>
