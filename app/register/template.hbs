<div class="login">
  <h2 class="login__heading">Register</h2>
  <form class="login__form" {{action 'authenticate' on='submit'}}>

    <div class="field">
      <label for="identification">Username or Email</label>
      {{input value=userName class='field'}}
    </div>

    <div class="field">
      <label for="password">Password</label>
      {{input value=password type="password" class="field"}}
    </div>

    <div class="btn-field">
      <button type="submit" class="btn btn-primary" {{action 'authenticate'}}>
          Register
      </button>
    </div>
  </form>

  {{#if errorMessage}}
  <p>
    <strong>Login Failed:</strong>
    <code>{{errorMessage}}</code>
  </p>
  {{/if}}
</div>

{{outlet}}
