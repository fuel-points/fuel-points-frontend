<div class="login">
  <h2 class="login__heading">Register</h2>
  {{#with (changeset model userValidator) as |formValues|}}
    <form class="login__form" {{action 'saveUser' formValues on='submit'}}>

      <div class="user__form">
        {{form-input placeholder='Username' changeset=formValues type="text" property="name" class="field destination__input"}}
      </div>

      <div class="user__form">
        {{form-input placeholder='Password' changeset=formValues property="password" type="password" class="field destination__input"}}
      </div>

      <div class="btn-field">
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
    </form>
  {{/with}}

  {{#if errorMessage}}
    <p>
      <strong>Login Failed:</strong>
      <code>{{errorMessage}}</code>
    </p>
  {{/if}}
</div>
